extends base

block content 
  section#c1
    h1 Cart Items
    hr
    if(carts.length === 0)
      h2#empty Cart is Empty
  section#c4
    each cart in carts
      .cart-content
        img(src=`img/genaral/${cart.item.photo}` alt=cart.item.name)
        h1=cart.item.name
        h2.price=cart.item.price
        p#idof=cart.id
        button.btn.remove(type='button') Remove
    // Total Prices
    hr
  section#c3
    .total
      h1 Total Price
      h2#total 0
    a#next(href='#') Order
